#
# WSL2
#

alias wslc="rm pulse && rm wayland-0*"

#
# Common Commands
#

alias src="source ~/.zshrc"

#
# Common Utilities
#

alias ls="eza"
alias ll="eza -la"
alias la="eza -la"
alias l="eza -l"
alias lt="eza --tree"

alias hx="helix"
alias hy="hyfetch"
alias cd="z"
alias v="nvim"
alias m="rmpc"
alias sc="hyprshot -m output --clipboard-only"
alias sr="hyprshot -m region --clipboard-only"

# Arch Linux
alias add="sudo pacman -Sy"
alias search="sudo pacman -Ss"
alias upgrade="sudo pacman -Syu"
alias query="sudo pacman -Q"
alias clean="nix-collect-garbage -d && sudo paccache -r"

#
# Git
#

alias gs="git status"
alias gc="git commit -m"
alias gca="git commit -a -m"
alias gp="git push origin HEAD"
alias gpu="git pull origin"
alias glog="git log --graph --topo-order --pretty='%w(100,0,6)%C(yellow)%h%C(bold)%C(black)%d %C(cyan)%ar %C(green)%an%n%C(bold)%C(white)%s %N' --abbrev-commit"
alias gdiff="git diff"
alias gco="git checkout"
alias gb='git branch'
alias gba='git branch -a'
alias gadd='git add'
alias ga='git add -p'
alias gcoall='git checkout -- .'
alias gr='git remote'
alias gre='git reset'

#
# Kubectl
#

alias k="kubectl"
alias ka="kubectl apply -f"
alias kg="kubectl get"
alias kd="kubectl describe"
alias kdel="kubectl delete"
alias kl="kubectl logs"
alias kgpo="kubectl get pod"
alias kgd="kubectl get deployments"
alias kc="kubectx"
alias kns="kubens"
alias kl="kubectl logs -f"
alias ke="kubectl exec -it"

# Python 
alias py="source ~/.pyenv/default/bin/activate"

#
# Univeris
#

alias flexg4test="gcloud container clusters get-credentials flexg4test-default-cluster --region northamerica-northeast1 --project flexg4test-f5e2"
alias devshared="gcloud container clusters get-credentials devshared-default-cluster --region northamerica-northeast1 --project devshared-9195"
