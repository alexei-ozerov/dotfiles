function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function vf() {
    FOUNDFILE=$(fzf)
    if [[ -z $FOUNDFILE ]]; then
        exit 0
    fi
    nvim "${FOUNDFILE}"
}
